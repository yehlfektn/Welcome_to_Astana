<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_description_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="kz.recycleview.Description_Activity"
        tools:showIn="@layout/activity_description"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="258dp"/>

        <LinearLayout
            android:id="@+id/LinearSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:drawableLeft="@drawable/ic_map_marker"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_map_marker"
            android:text="Не указано"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/bullet"
                android:text="Category"
                android:textColor="#FF8B00"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rectangleshape"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="2500.0 kм"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>


        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="6"
            android:text="Description asdas asd asd asd asd asd asd as dasdasd asd ad asd asd asd asd asd asd asd asd asd asd asd asd asd asd "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:animation_duration="1000"/>
        <TextView
            android:id="@+id/openCollapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Читать дальше"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />


        <TextView
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_share_symbol"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_share_symbol"
            android:gravity="left"
            android:onClick="Share"
            android:padding="15dp"
            android:paddingLeft="125dp"
            android:paddingStart="125dp"
            android:text="@string/share" />

        <TextView
            android:id="@+id/wayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_location_on_road"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_location_on_road"
            android:gravity="left"
            android:onClick="GoogleMap"
            android:padding="15dp"
            android:paddingLeft="110dp"
            android:paddingStart="110dp"
            android:text="@string/make_way" />

        <TextView
            android:id="@+id/taxiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_cab"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_cab"
            android:gravity="left"
            android:onClick="CallTaxi"
            android:padding="15dp"
            android:paddingLeft="120dp"
            android:paddingStart="120dp"
            android:text="@string/call_taxi" />

    </LinearLayout>
</ScrollView>
