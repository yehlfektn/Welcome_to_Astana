<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLinear"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgX"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:onClick="Xbutton"
            android:src="@mipmap/icon_cross"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/txtKaz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="end"
            android:text="@string/rus"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size"
            />
        <TextView
            android:id="@+id/txtRus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="end"
            android:text="@string/kaz"
            android:textColor="#C1C1C1"
            android:textSize="@dimen/font_size"
            />
        <TextView
            android:id="@+id/txtEng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="end"
            android:text="@string/eng"
            android:textColor="#C1C1C1"
            android:textSize="@dimen/font_size"
            />

            </LinearLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/searchTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_right_arrow"
        android:ems="10"
        android:hint="@string/what_are_you_looking_for"
        android:inputType="textPersonName"
        android:textColorHint="#C1C1C1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ExpandableListView
        android:id="@+id/expandableListView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:childIndicator="@null"
        android:divider="@null"
        android:groupIndicator="@null"
        android:listSelector="@android:color/transparent">
    </ExpandableListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:background="#F6FAFB"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F6FAFB"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToFacebook"
            android:src="@mipmap/ic_facebook" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToInsta"
            android:src="@mipmap/ic_insta" />

        <ImageView
            android:id="@+id/vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToVk"
            android:src="@mipmap/ic_vk" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:background="#F6FAFB"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/developed_in"
            android:textColor="#C1C1C1"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/ibec"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:onClick="goToVk"
            android:src="@drawable/ibec" />

    </LinearLayout>

</LinearLayout>
