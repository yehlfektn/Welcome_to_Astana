<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_description_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.nurdaulet.recycleview.Description_Activity"
        tools:showIn="@layout/activity_description"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="258dp"/>

        <LinearLayout
            android:id="@+id/LinearSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/viewPager"
            android:gravity="center_vertical|center_horizontal"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0.08"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:drawableLeft="@drawable/ic_map_markerblack"
            android:drawableStart="@drawable/ic_map_markerblack"
            android:text="Не указано"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/bullet"
                android:text="Category"
                android:textColor="#FF8B00"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangleshape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="2500 м"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/summary"
            android:layout_marginBottom="20dp"/>


        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            />


        <TextView
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_share_symbol"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_share_symbol"
            android:padding="15dp"
            android:paddingLeft="100dp"
            android:paddingStart="100dp"
            android:text="@string/share"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="Share"/>

        <TextView
            android:id="@+id/wayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_location_on_road"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_location_on_road"
            android:padding="15dp"
            android:paddingLeft="95dp"
            android:paddingStart="95dp"
            android:text="@string/make_way"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="GoogleMap"/>

        <TextView
            android:id="@+id/taxiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape"
            android:drawableLeft="@drawable/ic_cab"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_cab"
            android:padding="15dp"
            android:paddingLeft="95dp"
            android:paddingStart="95dp"
            android:text="@string/call_taxi"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="CallTaxi"/>

    </LinearLayout>
</ScrollView>
