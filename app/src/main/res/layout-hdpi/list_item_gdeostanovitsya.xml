<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="258dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            android:adjustViewBounds="false" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackgradient" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="#EFB201"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="4"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:gravity="bottom"
                    android:textColor="@android:color/background_light"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    tools:text="Концерт Филиппа Киркорова" />


                <TextView
                    android:id="@+id/phoneGde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="+7(747)720-10-94"
                    android:drawableLeft="@drawable/ic_telephone_receiver"
                    android:drawableStart="@drawable/ic_telephone_receiver"
                    android:drawablePadding="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/locationGde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_marginStart="@dimen/marginLeft"
                    android:drawableLeft="@drawable/ic_map_marker"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_map_marker"
                    android:text="пр. Туран 10. в здании Fitness Palace."
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:text="Астана"
                        android:layout_width="206dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:drawableStart="@drawable/bulletpurple"
                        android:drawableLeft="@drawable/bulletpurple"
                        android:textColor="@android:color/holo_purple"
                        android:textSize="12sp"
                        android:id="@+id/category"
                        android:layout_gravity="bottom"
                        android:drawablePadding="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangleshape_purple"
                            android:gravity="bottom"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="2500.0 kм"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


</RelativeLayout>