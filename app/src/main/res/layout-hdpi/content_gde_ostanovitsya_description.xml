<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="56dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_description_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.nurdaulet.recycleview.Description_Activity"
        tools:showIn="@layout/activity_description"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:weightSum="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="258dp"/>

        <LinearLayout
            android:id="@+id/LinearSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_below="@id/viewPager"
            android:gravity="center_vertical|center_horizontal"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0.12"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="#EFB201"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_map_marker"
                android:layout_gravity="top"/>


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не указано "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_telephone_receiver"
                android:layout_gravity="top"/>


            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не указано"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/website"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:drawableLeft="@drawable/ic_earth_globe"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_earth_globe"
                android:onClick="goToTextView"
                android:text="Не указано"
                android:textColor="@android:color/holo_purple"
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangleshape_purple"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="2500.0 kм"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="6"
            android:text="Description"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:animation_duration="1000" />
        <TextView
            android:text="Читать дальше"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openCollapse"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"/>


        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            />

        <TextView
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape_purple"
            android:drawableLeft="@drawable/ic_share_symbol"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_share_symbol"
            android:padding="15dp"
            android:paddingLeft="90dp"
            android:paddingStart="90dp"
            android:text="@string/share"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="ShareGde"/>


        <TextView
            android:id="@+id/wayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape_purple"
            android:drawableLeft="@drawable/ic_location_on_road"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_location_on_road"
            android:padding="15dp"
            android:paddingLeft="70dp"
            android:paddingStart="70dp"
            android:text="@string/make_way"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="GoogleMapEvents"/>

        <TextView
            android:id="@+id/taxiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangleshape_purple"
            android:drawableLeft="@drawable/ic_cab"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_cab"
            android:padding="15dp"
            android:paddingLeft="90dp"
            android:paddingStart="90dp"
            android:text="@string/call_taxi"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="CallTaxiEvent"/>
    </LinearLayout>
</ScrollView>
